<table class="add-on-table generic-text">
    <tr>
        <td class="checkboxCol">
            <%= form.check_box :toolbox, disabled: "true", checked: true; %>
        </td>
        <td class="priceCol">
            $20
        </td>
        <td class="descriptionCol">
            Toolbox <a data-toggle="modal" data-target="#toolsModal "><span class="glyphicon glyphicon-question-sign"></span></a>
        </td>
    </tr>
    <tr>
        <td class="checkboxCol">
            <%= form.check_box :ladder, id: :reservation_ladder, onClick: "changeAddOn('Ladder',$(this).prop('checked'))"%>
        </td>
        <td class="priceCol">
            +$10
        </td>
        <td class="descriptionCol">
            Ladder <a data-toggle="modal" data-target="#ladderModal"><span class="glyphicon glyphicon-question-sign"></span></a>
        </td>
    </tr>
    <tr>
        <td class="checkboxCol">
            <%= form.check_box :light, id: :reservation_light, onClick: "changeAddOn('Light',$(this).prop('checked'))" %>
        </td>
        <td class="priceCol">
            +$10
        </td>
        <td class="descriptionCol">
            Work Light <a data-toggle="modal" data-target="#lightModal"><span class="glyphicon glyphicon-question-sign"></span></a>
        </td>
    </tr>
    <tr>
        <td class="checkboxCol">
            <input id="delivery" type="checkbox" onChange ="toggleDelivery(this.checked)" onClick= "changeAddOn('Delivery', $(this).prop('checked'))">
        </td>
        <td class="priceCol">
            +$8
        </td>
        <td class="descriptionCol">
            Delivery <a data-toggle="modal" data-target="#deliveryModal"><span class="glyphicon glyphicon-question-sign"></span></a>
        </td>
    </tr>
    <tr class="showInFullForm hide totalRow">
        <td class="checkboxCol">
        </td>
        <td class="priceCol">
            $20
        </td>
        <td class="descriptionCol">
            Total
        </td>   
    </tr>
</table>
