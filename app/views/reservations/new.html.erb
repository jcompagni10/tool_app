<script>
    var reserved_dates = <%= @reservedDates.to_json.to_s.html_safe %>
</script>
<div class="container-fluid">
    <div class="row">
        <div class ="col appTitle">
            <h1> Drill Me Now </h1>
            <h4> Rent an electric drill & all the tools you need
            for your home improvement projects. </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 col-md-offset-2 mainContent">

            <div class="row topText">
                <h2> Get it Today <a class="reserveLink" data-toggle ="modal" data-target="#reserveLaterModal">(Reserve for Later)</a></h2>
                <h4> 9am-9pm pickup at 3156 24th St. <br>
                or <br>
                <u>Same day delivery </u> at your convenience. </h4>
            </div>
            <% if flash[:notice] %>
                <div id="notice"><%= flash[:success] %></div>
            <% else %>
                <%= render partial: 'form', :locals => {reserveLater: false, reservation: @reservation } %>
            <%end %>   
            <div class="bottomText">
                Tools due back in 2 days 
                <span class="dueDate">
                    <%="#{(Time.now + 3.days).strftime("%m/%d/%Y")}" %>
                </span>
            </div>       
        </div>
        <div class="col-md-3 sideBar">
            <div class="quote pull-left">
                <span class="quoteBody">
                    "I rented a toolbox from <i>Drill Me Now</i> and I 
                    built a new dog house for FiFi"
                </span><br>
                <div class="quoteByLine">-Jon McFixit</div>
            </div>
        </div>    
    </div>
</div>
<div class="modal fade" id="reserveLaterModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 style="">Reserve  For Later</h4>
        </div>
        <div class="modal-body">
            <%= render partial: 'form', :locals => {reserveLater: true, reservation: @reservation } %> 
        </div>
    </div>
</div>

        
        